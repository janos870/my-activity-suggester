{
    "manifest_version": 3,
    "name": "Activity Suggester",
    "version": "1.0",
    "description": "Get random activities when you're bored, categorized for easy selection.",
    "action": {
      "default_popup": "index.html", 
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": [
      "storage"
    ]
  }
  